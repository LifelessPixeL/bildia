<!-- Modal new municipality-->
<div class="modal fade" id="newMunicipalityModal" tabindex="-1" role="dialog" aria-labelledby="newMunicipalityModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newMunicipalityModalLabel">Añadir municipio</h5>
                <button type="button" class="btn close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="js-form-new-municipality">
                    <div class="mb-3 mt-3">
                        <label for="name" class="form-label">Nombre:</label>
                        <input type="text" class="form-control" id="name" placeholder="Nombre" name="name" required>
                        <div class="invalid-feedback">Dato requerido</div>
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="slug" class="form-label">Slug:</label>
                        <input type="text" class="form-control" id="slug" placeholder="Slug" name="slug" required>
                        <div class="invalid-feedback">Dato requerido</div>
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="latitude" class="form-label">Latitud:</label>
                        <input type="text" class="form-control" id="latitude" placeholder="Latitud" name="latitude" required>
                        <div class="invalid-feedback">Dato requerido</div>
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="longitude" class="form-label">Longitud:</label>
                        <input type="text" class="form-control" id="mlongitude" placeholder="Longitud" name="longitude" required>
                        <div class="invalid-feedback">Dato requerido</div>
                    </div>
                    <button type="submit" class="btn btn-primary float-end">Enviar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal delete municipality -->
<div class="modal fade" id="deleteMunicipalityModal" tabindex="-1" role="dialog" aria-labelledby="deleteMunicipalityModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteMunicipalityModalLabel">Borrar municipio</h5>
                <button type="button" class="btn close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>¿Quiéres borrar definitivamente el municipio <span id="delete-municipality-modal-name"></span>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="js-municipality-deleter">Borrar</button>
            </div>
        </div>
    </div>
</div>